<resources>

    <!-- Base application theme. -->
    <style name="common_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/common_colorPrimary</item>
        <item name="colorPrimaryDark">@color/common_colorPrimaryDark</item>
        <item name="colorAccent">@color/common_colorAccent</item>
    </style>

    <!--默认的一级文字样式-->
    <style name="common_TextStyleLevel1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/common_black</item>
    </style>

    <!--默认的二级文字样式-->
    <style name="common_TextStyleLevel2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/common_black</item>
    </style>

    <!--默认的三级文字样式-->
    <style name="common_TextStyleLevel3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/common_black</item>
    </style>

    <!--默认的四级文字样式,灰色小字-->
    <style name="common_TextStyleLevel4">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/common_darkgray</item>
    </style>


</resources>
