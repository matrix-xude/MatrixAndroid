<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_aquamarine"
    tools:context=".MainActivity">

    <com.xxd.common.tool.shape.CustomShapeSimpleTextView
        android:id="@+id/tv_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="20dp"
        android:maxLines="1"
        android:text="房东方大搜发生范德萨范德萨发的说法第三方"
        android:ellipsize="end"
        android:textColor="@color/common_red"
        android:textSize="22sp"
        app:CustomShapeFillColor="@color/common_floralwhite"
        app:CustomShapeRadius="8dp"
        app:CustomShapeStrokeColor="@color/common_yellow"
        app:CustomShapeStrokeWidth="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.xxd.common.tool.shape.CustomShapeSimpleTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hgh 方"
            android:textColor="@color/common_black"
            android:textSize="22sp"
            app:CustomShapeFillColor="@color/common_floralwhite"
            app:CustomShapeRadius="8dp"
            app:CustomShapeStrokeColor="@color/common_blue"
            app:CustomShapeStrokeWidth="2dp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.xxd.common.tool.shape.CustomShapeSimpleTextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1111111fadsfdsafa方"
                android:textColor="@color/common_black"
                android:textSize="22sp"
                app:CustomShapeFillColor="@color/common_floralwhite"
                app:CustomShapeRadius="8dp"
                app:CustomShapeStrokeColor="@color/common_yellow"
                app:CustomShapeStrokeWidth="2dp"
                app:layout_constraintEnd_toStartOf="@id/tv_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.xxd.common.tool.shape.CustomShapeSimpleTextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/tv_1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="阿道夫第三方第三方"
                android:textColor="@color/common_black"
                android:textSize="22sp"
                app:CustomShapeFillColor="@color/common_floralwhite"
                app:CustomShapeRadius="8dp"
                app:CustomShapeStrokeColor="@color/common_red"
                app:CustomShapeStrokeWidth="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_1"
                app:layout_constraintTop_toTopOf="parent" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_1">

        <com.xxd.common.tool.shape.CustomShapeSimpleTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hgh 方"
            android:textColor="@color/common_black"
            android:textSize="22sp"
            app:CustomShapeFillColor="@color/common_floralwhite"
            app:CustomShapeRadius="8dp"
            app:CustomShapeStrokeColor="@color/common_blue"
            app:CustomShapeStrokeWidth="2dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.xxd.common.tool.shape.CustomShapeSimpleTextView
                android:id="@+id/tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="113311rrrrrrrrrrrrrrrrrrrrrrraaaaaaaaaaaaaaaaaaarrrfffffffff1fa方"
                android:textColor="@color/common_black"
                android:textSize="22sp"
                app:CustomShapeFillColor="@color/common_floralwhite"
                app:CustomShapeRadius="8dp"
                android:maxLines="1"
                app:CustomShapeStrokeColor="@color/common_yellow"
                app:CustomShapeStrokeWidth="2dp"
                app:layout_constraintWidth_max="200dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                 />

            <com.xxd.common.tool.shape.CustomShapeSimpleTextView
                android:id="@+id/tv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_toEndOf="@id/tv_3"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="sg三方"
                android:textColor="@color/common_black"
                android:textSize="22sp"
                app:CustomShapeFillColor="@color/common_floralwhite"
                app:CustomShapeRadius="8dp"
                app:CustomShapeStrokeColor="@color/common_red"
                app:CustomShapeStrokeWidth="2dp"
                app:layout_constraintStart_toEndOf="@id/tv_3"
                app:layout_constraintTop_toTopOf="parent"
                 />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>