<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_tan"
    android:padding="10dp">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_turquoise"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:text="AppCompatEditText"
        android:textColor="@color/common_black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.xxd.myself.edit.MyEditText
        android:id="@+id/et_2"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:background="@color/common_turquoise"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:text="MyEditText"
        android:textColor="@color/common_black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_1" />

    <com.xxd.common.costom.shape.CustomEditText
        android:id="@+id/et_3"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:background="@color/common_turquoise"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:text="CustomEditText"
        android:textColor="@color/common_black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_2" />

    <com.xxd.myself.edit.MyJavaEditText
        android:id="@+id/et_4"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:background="@color/common_turquoise"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:text="MyJavaEditText"
        android:textColor="@color/common_black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_3" />


</androidx.constraintlayout.widget.ConstraintLayout>