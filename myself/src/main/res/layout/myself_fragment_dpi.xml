<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dp.PxFragment">

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/common_lavender"
        android:gravity="center"
        android:text="第1个图像放在drawable-ldpi"
        android:textColor="@color/common_black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/common_lavender"
        android:gravity="center"
        android:text="第2个图像放在drawable-mdpi"
        android:textColor="@color/common_black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/tv_1"
        app:layout_constraintTop_toBottomOf="@id/tv_1" />

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/common_lavender"
        android:gravity="center"
        android:text="第3个图像放在drawable-nodpi"
        android:textColor="@color/common_black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/tv_1"
        app:layout_constraintTop_toBottomOf="@id/tv_2" />

    <TextView
        android:id="@+id/tv_4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/common_lavender"
        android:gravity="center"
        android:text="第4个图像放在drawable-xxhdpi,与本机的density一样"
        android:textColor="@color/common_black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/tv_1"
        app:layout_constraintTop_toBottomOf="@id/tv_3" />

    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:src="@drawable/icon_3"
        android:layout_marginTop="10dp"
        android:background="@color/common_lavender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_4" />

    <ImageView
        android:id="@+id/iv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@color/common_lavender"
        android:src="@drawable/icon_2"
        app:layout_constraintStart_toEndOf="@id/iv_1"
        app:layout_constraintTop_toTopOf="@id/iv_1" />

    <ImageView
        android:id="@+id/iv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@color/common_lavender"
        android:src="@drawable/icon_1"
        app:layout_constraintStart_toEndOf="@id/iv_2"
        app:layout_constraintTop_toTopOf="@id/iv_1" />

    <ImageView
        android:id="@+id/iv_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@color/common_lavender"
        android:src="@drawable/icon_4"
        app:layout_constraintStart_toEndOf="@id/iv_3"
        app:layout_constraintTop_toTopOf="@id/iv_1" />

    <TextView
        android:id="@+id/tv_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/common_lavender"
        android:padding="5dp"
        android:gravity="start"
        android:textColor="@color/common_black"
        android:text="点我开始测试4个ImageView的宽高"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/tv_1"
        app:layout_constraintTop_toBottomOf="@id/iv_1" />


</androidx.constraintlayout.widget.ConstraintLayout>