<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="ResourceName">
    <!--    公用的shape属性-->
    <attr name="shapeRadiusTopLeft" format="dimension" />
    <attr name="shapeRadiusTopRight" format="dimension" />
    <attr name="shapeRadiusBottomLeft" format="dimension" />
    <attr name="shapeRadiusBottomRight" format="dimension" />
    <attr name="shapeRadius" format="dimension" />
    <attr name="shapeColor" format="color" />
