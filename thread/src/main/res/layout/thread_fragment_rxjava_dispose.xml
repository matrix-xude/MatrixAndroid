<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    android:orientation="vertical"
    tools:context=".rxjava.RxJavaDisposeFragment">

    <TextView
        android:id="@+id/tv1"
        style="@style/common_TextStyleLevel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/common_gray"
        android:padding="10dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="onSubscribe赋值Disposable" />

    <TextView
        android:id="@+id/tv2"
        style="@style/common_TextStyleLevel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/common_gray"
        android:padding="10dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="onSubscribe赋值后中断" />


    <TextView
        android:id="@+id/tv3"
        style="@style/common_TextStyleLevel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/common_gray"
        android:padding="10dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="subscribe返回值来赋值Disposable" />

    <TextView
        android:id="@+id/tv4"
        style="@style/common_TextStyleLevel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/common_gray"
        android:padding="10dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="subscribe返回值中断" />

    <TextView
        android:id="@+id/tv5"
        style="@style/common_TextStyleLevel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/common_gray"
        android:padding="10dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="准备订阅者2端" />

    <TextView
        android:id="@+id/tv6"
        style="@style/common_TextStyleLevel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/common_gray"
        android:padding="10dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="多次订阅" />


</LinearLayout>
