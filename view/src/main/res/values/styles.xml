<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="view_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/view_colorPrimary</item>
        <item name="colorPrimaryDark">@color/view_colorPrimaryDark</item>
        <item name="colorAccent">@color/view_colorAccent</item>
    </style>

    <style name="view_indicator_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <declare-styleable name="NineControlView" tools:ignore="ResourceName">
        <attr name="intervalWidth" format="dimension" />
        <attr name="radius" format="dimension" />
        <attr name="oneViewWidthPercent" format="float" />
    </declare-styleable>

    <declare-styleable name="NineControlSpecialView" tools:ignore="ResourceName">
        <attr name="nineControlIntervalWidth" format="dimension" />
        <attr name="nineControlRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="OneLineLayout" tools:ignore="ResourceName">
        <!-- 每个子view之间的间距-->
        <attr name="oneLineInterval" format="dimension" />
        <!--子view的对齐方式；3种，top、center、bottom-->
        <attr name="oneLineAlignAt" format="enum">
            <enum name="center" value="0" />
            <enum name="top" value="1" />
            <enum name="bottom" value="2" />
        </attr>
    </declare-styleable>

    <!--必须以"_Layout"结尾，否则代码获取属性时警告-->
    <declare-styleable name="OneLineLayout_Layout" tools:ignore="ResourceName">
        <!--必须以"layout_"开头，否则xml中使用时警告-->
        <!--子view需要测量的优先级，数字越大优先级越高-->
        <attr name="layout_oneLinePriority" format="integer" />
    </declare-styleable>

    <!--带圆角，边框的ImageView-->
    <declare-styleable name="CustomImageView" tools:ignore="ResourceName">
        <attr name="civ_radius_top_left" format="dimension" />
        <attr name="civ_radius_top_right" format="dimension" />
        <attr name="civ_radius_bottom_left" format="dimension" />
        <attr name="civ_radius_bottom_right" format="dimension" />
        <attr name="civ_radius" format="dimension" />
        <attr name="civ_stroke_width" format="dimension" />
        <attr name="civ_stroke_color" format="color" />
    </declare-styleable>


</resources>
