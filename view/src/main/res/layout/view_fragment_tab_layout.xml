<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".material.tablayout.TabLayoutFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_topic"
        android:layout_width="0dp"
        android:layout_height="46dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabMode="scrollable"
        android:paddingBottom="15dp"
        android:paddingTop="6dp"
        app:tabTextAppearance="@style/view_indicator_text"
        android:background="@color/common_gray"
        app:tabIndicatorColor="#DB121F"
        app:tabSelectedTextColor="@color/common_lawngreen"
        app:tabTextColor="@color/common_gold"
        app:tabRippleColor="@color/common_transparent"
        app:tabIndicatorGravity="bottom"

        app:tabIndicator="@drawable/view_tab_indicator2" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_topic"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/common_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tl_topic" />
</androidx.constraintlayout.widget.ConstraintLayout>
