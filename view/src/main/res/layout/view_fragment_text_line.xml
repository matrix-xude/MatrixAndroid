<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/common_skyblue"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_choose_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@color/common_white"
            android:text="文字1"
            android:textColor="@color/common_red"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_choose_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@color/common_white"
            android:text="文字2"
            android:textColor="@color/common_red"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_choose_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@color/common_white"
            android:text="文字3"
            android:textColor="@color/common_red"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_choose_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@color/common_white"
            android:text="文字4"
            android:textColor="@color/common_red"
            android:textSize="17sp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <com.xxd.view.text.MaxLineTextView
            android:id="@+id/tv_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/common_blanchedalmond"
            android:lineSpacingMultiplier="1.5"
            android:maxLines="2"
            android:text="高级的非常,我的个打发打发，发放地方，反，大幅度，，的，安防发电房大幅度放到，放到"
            android:textColor="@color/common_red"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.xxd.view.text.MaxLineTextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/common_blanchedalmond"
            android:lineSpacingMultiplier="1.5"
            android:maxLines="1"
            android:text="查看更多\n"
            android:textColor="@color/common_blue"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
